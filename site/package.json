{
  "name": "better-helperjs-site",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx ../src/ssr/site-server.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "vite build --ssr src/app.tsx --outDir dist/server",
    "start": "NODE_ENV=production tsx ../src/ssr/site-server.ts",
    "check": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.13",
    "tsx": "^4.20.5",
    "typescript": "^5.7.3",
    "vite": "^7.3.1"
  }
}
